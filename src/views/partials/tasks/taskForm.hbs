<div class="card car-body p-4 rounded--0 bg-dark text-white">
  <h3>Agrega una Tarea</h3>
  <form action="/tasks/add" method="POST">

    <div>
      <label for="title">Escriba un titulo</label>
      <input
        type="text"
        name="title"
        placeholder="Título"
        class="form-control rounded-0 bg-dark text-white"
      />
    </div>

    <div>
      <label for="description">Descripcion:</label>
      <textarea
        name="description"
        placeholder="Descripción"
        id="description"
        class="form-control rounded-0 bg-dark text-white"
      ></textarea>
    </div>

    <button class="btn btn-primary btn-sm mt-2">Agregar Tarea</button>
  </form>
</div>