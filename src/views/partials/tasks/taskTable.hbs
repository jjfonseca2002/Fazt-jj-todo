{{#if RsTarea}}
  <table class="table table-bordered table-hover table-dark ">
    <thead>
      <tr>
        <th>N</th>
        <th>Title</th>
        <th>Description</th>
        <th>Operations</th>
      </tr>
    </thead>

    <tbody>
      {{#each RsTarea}}
        <tr>
          <td>{{@index}}</td>
          <td>{{title}}</td>
          <td>{{description}}</td>
          <td>
            {{#if done}}
              <a href="/tareas/{{_id}}/toggleDone" class="btn btn-dark btn-sm">Undone</a>
            {{else}}
              <a href="/tareas/{{_id}}/toggleDone" class="btn btn-success btn-sm">Done</a>
            {{/if}}

            <a href="/tareas/{{_id}}/edit" class="btn btn-info btn-sm">Editar</a>
            <a href="/tareas/{{_id}}/delete" class="btn btn-danger btn-sm">Eliminar</a>

          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <div class="text-center">
    <h1>No hay Tareas</h1>
    <img src="" alt="">
  </div>
{{/if}}